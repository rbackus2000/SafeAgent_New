rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    // User can access only their own data
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Allow access to user's subcollections
      match /{collection}/{docId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
    
    // For showing completions, users can read/write only their own data
    match /showingCompletions/{docId} {
      allow create: if isSignedIn() && request.resource.data.agentId == request.auth.uid;
      allow read, update: if isSignedIn() && resource.data.agentId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.agentId == request.auth.uid;
    }
    
    // For office recaps, allow creating if user is authenticated
    match /officeRecaps/{docId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.agentId == request.auth.uid);
    }
    
    // For simplicity, allow authenticated users to read/write appointments they own
    match /appointments/{docId} {
      allow create: if isSignedIn() && request.resource.data.agentId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.agentId == request.auth.uid;
    }
    
    // Block access to all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 